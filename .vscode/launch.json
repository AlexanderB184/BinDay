{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/test/merge_sort",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/test",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build with GDB", // This should match the label of your build task in tasks.json
            "miDebuggerPath": "/usr/bin/gdb",
            "sourceFileMap": {
                "/path/to/your/source": "${workspaceFolder}/test"
            }
        }
    ]
}